{
    "manifest_version": 3,
    "name": "Jobkurier Extension",
    "version": "1.0",
    "description": "My first Chrome extension",
    "icons": {
      "48": "icon.png",
      "128": "icon.png"
    },
    "permissions": ["tabs", "activeTab", "webNavigation"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }